<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.vnk.smartcity.officer.UpdateComplaintFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp">
            <!--
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="16sp"

                                android:layout_gravity="center_vertical"
                                android:text="Complaint ID" />
                            <Spinner
                                android:id="@+id/spinnerCID"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:minWidth="160dp"
                                android:spinnerMode="dialog"
                                android:background="@android:drawable/btn_dropdown"
                                android:layout_weight="1" />


                        </LinearLayout>-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?android:attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="8dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/activity_horizontal_margin">


                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TableRow android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Complaint ID"
                                android:textSize="@dimen/textsizerow" />

                            <TextView
                                android:id="@+id/textViewComId1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/textsizerow"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Category"
                                android:textSize="@dimen/textsizerow" />

                            <TextView
                                android:id="@+id/textViewCat1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/textsizerow"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Title"
                                android:textSize="@dimen/textsizerow" />

                            <TextView
                                android:id="@+id/textViewTitle1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" \n"
                                android:textSize="@dimen/textsizerow"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Description"
                                android:textSize="@dimen/textsizerow" />

                            <TextView
                                android:id="@+id/textViewDESCR1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/textsizerow"
                                android:textStyle="bold" />

                        </TableRow>

                        <TableRow android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Address"
                                android:textSize="@dimen/textsizerow" />

                            <TextView
                                android:id="@+id/textViewADDRESS1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/textsizerow"
                                android:textStyle="bold" />

                        </TableRow>


                        <TableRow android:paddingBottom="4dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Submit Date"
                                android:textSize="@dimen/textsizerow" />

                            <TextView
                                android:id="@+id/textViewSubmitDate1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:textSize="@dimen/textsizerow"
                                android:textStyle="bold" />
                        </TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="10dp"
                            android:text="Image:-"
                            android:textSize="@dimen/textsizerow" />

                        <com.android.volley.toolbox.NetworkImageView
                            android:id="@+id/imageViewCMP1"
                            android:layout_width="wrap_content"
                            android:layout_height="250dp"
                            android:adjustViewBounds="true"
                            android:maxHeight="250dp"
                            android:scaleType="fitXY" />

                        <TableRow
                            android:paddingBottom="4dp"
                            android:paddingTop="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingRight="10dp"
                                android:text="Status"
                                android:textSize="@dimen/textsizerow" />

                            <Spinner
                                android:id="@+id/spinnerSTATUS1"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"

                                android:background="@android:drawable/btn_dropdown"
                                android:minWidth="200dp"
                                android:spinnerMode="dialog" />
                        </TableRow>
                    </TableLayout>

                    <Button
                        android:id="@+id/buttonUpStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update Status" />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
